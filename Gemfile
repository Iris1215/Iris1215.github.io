source 'https://rubygems.org'

group :jekyll_plugins do
  gem 'jekyll'
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'webrick', '~> 1.8'
end

gem 'github-pages'
gem 'connection_pool', '2.5.0'

# Ruby 3.4+ no longer includes csv as a default gem; Jekyll requires it.
gem 'csv'

# Ruby 3.4+ no longer includes bigdecimal as a default gem; Liquid requires it.
gem 'bigdecimal'
